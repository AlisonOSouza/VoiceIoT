<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alison.voiceiot">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/voice_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/voice_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".VoiceActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Necessario adicionar essas tags a cada nova tela criada -->
        <activity android:name=".DisplayMessageActivity"
            android:parentActivityName=".VoiceActivity" >
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".VoiceActivity" />
        </activity>

        <!-- Necessario adicionar essas tags a cada nova tela criada -->
        <activity android:name=".Settings"
            android:parentActivityName=".VoiceActivity" >
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".VoiceActivity" />
        </activity>

    </application>

</manifest>